{# src/AdminBundle/Resources/views/Security/login.html.twig #}
{% extends '::base.html.twig' %}
{% block title %}WikiGoT login{% endblock %}

{% block slider %}
<h3> A las puertas de Juego de Tronos</h3>
<p>― Ya casi estas! </p> 
{% endblock %}

{% block body %}
<div class="login">
	<form action="{{ path('blogger_admin_login_check') }}" method="post"  class="login">
	<br>
	<br>
		<label for="username">Usuario:</label>
		<input type="text" id="username" name="_username" value="{{ last_username }}" />

		<label for="password">Contraseña:</label>
		<input type="password" id="password" name="_password" />

		<button type="submit">Entrar</button>
	</form>

	{% if error %}
		<div>No es una cuenta permitida.</div>
	{% endif %}
	</div>

{% endblock %}
