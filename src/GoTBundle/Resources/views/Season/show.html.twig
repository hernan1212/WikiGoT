{# src/GoTBundle/Resources/views/Season/show.html.twig #}
{% extends "::base.html.twig" %}
{% block title %}Detalles de la Temporada{% endblock %}

{% block slider %}
<h3>Detalles de la temporada</h3>
<p>― {{ season.name }}</p> 
{% endblock %}

{% block body %}
<div class="about-section" id="aboutus">
	<div class="about-grids">
		<div class="col-md-6 left-grid">
			<h1> {{ season.name }} </h1>
			<h2> {{ season.fecha|date('d-m-Y') }} </h2>
		</div>
					
		<div class="col-md-6 right-grid">
			<div class="right-top">
				<h4>Resumen de la temporada:</h4><br><br><br>
				<p> {{ season.resumen }}</p> <br><br>
				<h4>Capítulos: <span> {{ season.capitulos }} </span></h4>
			</div>
			<div class="right-bottom">
				<h4>Personajes que aparecen:<h4>
				<ul>
				{% for personaje in personajes %}
				<li> <a href="{{ path('blogger_blog_show', {'id': personaje.id}) }}"> {{ personaje.name }} </a> </li>
				{% endfor %}
				</ul>
			</div>
		</div>
		<div class="clearfix"> </div>
	</div>
</div>
{% endblock %}

{% block sidebar %}
{% endblock %}