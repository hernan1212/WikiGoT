                            </div>
                                    <div class="team-grids">
                                    <div class="col-md-8 team-grid">
                                        <div class="team-content">
                                            <a href="{{ path('blogger_blog_show', {'id': house.personajes[0].id}) }}">
                                            {{ house.personajes[0].name }}</a><br><br><br><br>
                                            <br><br><br><br>
                                        <p> {{ house.personajes[0].description(150) }} </p>
                                        </div>
                        </div>
                            </div>
                        <div class="clearfix"> </div>
                            </div> 
                            </div>
                        </div><!-- End John Snow -->
