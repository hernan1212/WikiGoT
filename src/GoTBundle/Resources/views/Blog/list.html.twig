{% block body %}
{% for house in houses %}

<div class="team-section" id="team"><!-- John Snow -->
    <div class="container">
        <div class="team-header">
                                
                                <h3><img src="{{ asset(house.emblem) }}" width="108px" height="108px"> {{ house.name }}</h3>

                                <p>{{ house.motto }}</p>
                                </div>
                                <div class="team-grids">
